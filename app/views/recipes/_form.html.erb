<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ingr| %>
  <%= ingr.label :ingredient_1 %>
  <%= ingr.text_field :ingredient_1 %><br>

  <%= ingr.label :ingredient_2 %>
  <%= ingr.text_field :ingredient_2 %><br>

  <%= ingr.label :name %>
  <%= ingr.text_field :name %><br>

  <%= ingr.label :quantity %>
  <%= ingr.text_field :quantity %><br>
<% end %>

  <%= f.submit %>
  <% end %>
